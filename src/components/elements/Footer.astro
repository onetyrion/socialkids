const footerNav1 = [
  {
    itemText: "Marketing",
    itemLink: "#",
  },
  {
    itemText: "Analylitics",
    itemLink: "#",
  },
  {
    itemText: "Commerce",
    itemLink: "#",
  },
  {
    itemText: "Insights",
    itemLink: "#",
  },
];

const footerSupport = [
  {
    itemText: "Pricing",
    itemLink: "#",
  },
  {
    itemText: "Guides",
    itemLink: "#",
  },
  {
    itemText: "FAQ",
    itemLink: "#",
  },
  {
    itemText: "Contact",
    itemLink: "#",
  },
];

const footerCompany = [
  {
    itemText: "About",
    itemLink: "/about",
  },
  {
    itemText: "Blog",
    itemLink: "#",
  },
  {
    itemText: "Jobs",
    itemLink: "#",
  },
  {
    itemText: "Parteners",
    itemLink: "#",
  },
  {
    itemText: "Jobs",
    itemLink: "#",
